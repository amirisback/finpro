<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/enable_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_big_16dp"
                    android:text="@string/text_title_pa" />

                <include layout="@layout/content_all_pa_judul_kelompok" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_big_16dp"
                    android:text="@string/text_anggota_kelompok" />

                <include layout="@layout/content_all_proyek_akhir_anggota" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_big_16dp"
                    android:text="@string/title_bimbingan" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/frg_mhs_pa_cardview_bimbingan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:elevation="14dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_medium_8dp"
                        android:layout_marginBottom="@dimen/dimen_medium_8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:text="@string/text_dosen_pembimbing" />

                        <TextView
                            android:id="@+id/frg_mhs_pa_textview_dsn_pembimbing"
                            style="@style/content_all_text_bold_color_primary"
                            tools:text="@string/dummy_dosen_pembimbing" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_line"
                            android:layout_marginBottom="@dimen/dimen_medium_8dp"
                            android:background="@color/colorBackground" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:text="@string/text_jumlah_bimbingan" />

                        <TextView
                            android:id="@+id/frg_mhs_pa_textview_jml_bimbingan"
                            style="@style/content_all_text_bold_color_black"
                            tools:text="@string/dummy_jumlah_bimbingan" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_line"
                            android:layout_marginTop="@dimen/dimen_medium_8dp"
                            android:layout_marginBottom="@dimen/dimen_medium_8dp"
                            android:background="@color/colorBackground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:layout_marginEnd="@dimen/dimen_big_16dp"
                            android:gravity="end"
                            android:text="@string/text_lihat_detail"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_big_16dp"
                    android:text="@string/title_monev" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/frg_mhs_pa_cardview_monev"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:elevation="14dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_medium_8dp"
                        android:layout_marginBottom="@dimen/dimen_medium_8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:text="@string/text_dosen_reviewer" />

                        <TextView
                            android:id="@+id/frg_mhs_pa_textview_dsn_reviewer"
                            style="@style/content_all_text_bold_color_primary"
                            tools:text="@string/dummy_dosen_reviewer" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_line"
                            android:layout_marginBottom="@dimen/dimen_medium_8dp"
                            android:background="@color/colorBackground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:layout_marginEnd="@dimen/dimen_big_16dp"
                            android:gravity="end"
                            android:text="@string/text_lihat_detail"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_big_16dp"
                    android:text="@string/title_sidang" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/frg_mhs_pa_cardview_sidang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_medium_8dp"
                        android:layout_marginBottom="@dimen/dimen_medium_8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:text="@string/text_status_sidang" />

                        <TextView
                            android:id="@+id/frg_mhs_pa_textview_sidang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:textAllCaps="true"
                            android:textColor="@color/colorBackgroundYellow"
                            android:textSize="@dimen/text_size_medium_16sp"
                            android:textStyle="bold"
                            tools:text="@string/dummy_status_sidang" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dimen_view_line"
                            android:layout_marginTop="@dimen/dimen_medium_8dp"
                            android:layout_marginBottom="@dimen/dimen_medium_8dp"
                            android:background="@color/colorBackground" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_big_16dp"
                            android:layout_marginEnd="@dimen/dimen_big_16dp"
                            android:gravity="end"
                            android:text="@string/text_lihat_detail"
                            android:textAllCaps="true"
                            android:textColor="@color/colorPrimary" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/disable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_medium_8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_big_16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_proyek_akhir"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_title_small_18sp" />

                <TextView
                    android:id="@+id/dis_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/text_belum_disetujui" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dimen_small_4dp"
                    android:layout_marginBottom="@dimen/dimen_small_4dp"
                    android:background="@color/colorBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/text_mengajukan_judul_pa" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>