<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- User Activity -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

        <style name="content_all_text_bold_color_primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_title_small_18sp</item>
    </style>

    <style name="content_all_text_bold_color_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/text_size_title_small_18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="content_all_text_color_black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textSize">@dimen/text_size_title_small_18sp</item>
    </style>

    <style name="content_all_list_title">
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_default_12sp</item>
        <item name="android:textColor">@color/colorTextBlack</item>
    </style>

    <style name="content_all_list_sub_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/dummy</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="all_image_informasi">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/dimen_profil_photo_list</item>
        <item name="android:layout_height">@dimen/dimen_profil_photo_list</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
    </style>

    <style name="view_all_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_medium_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
        <item name="android:background">@color/colorBackground</item>
    </style>

    <style name="cardview_list_all_clicked">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_medium_8dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_medium_8dp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="spinner_all">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/dummt_spinner</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/dimen_medium_8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fab_all_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/dimen_big_16dp</item>
        <item name="android:src">@drawable/ic_fab_add</item>
    </style>

    <style name="image_all_editor_view">
        <item name="android:layout_width">@dimen/dimen_profil_photo</item>
        <item name="android:layout_height">@dimen/dimen_profil_photo</item>
        <item name="android:layout_marginBottom">@dimen/dimen_big_ultra_32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/dummy</item>
    </style>

    <style name="textview_title_all_editor_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dimen_small_4dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_medium_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
        <item name="android:textSize">@dimen/text_size_title_small_18sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="button_all_primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextWhite</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:background">@drawable/box_border_button_primary</item>
    </style>

    <style name="profile_all_textview_content">
        <item name="android:layout_width">@dimen/dimen_weight</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_super_24dp</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/text_size_medium_16sp</item>
    </style>

    <style name="profile_all_textview_subtitle">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">@dimen/text_size_small_10sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="profile_all_container_textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
    </style>

    <style name="profile_all_photo">
        <item name="android:layout_width">@dimen/dimen_profil_photo</item>
        <item name="android:layout_height">@dimen/dimen_profil_photo</item>
        <item name="android:background">@drawable/circle_border_photo_profil</item>
        <item name="android:src">@drawable/ic_dummy_photo</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_big_16dp</item>
    </style>

    <style name="profile_all_header">
        <item name="android:id">@id/profile_header_container</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_profil_header</item>
        <item name="android:background">@drawable/circle_profile_header</item>
    </style>

    <style name="profile_all_header_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_medium_8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTextWhite</item>
    </style>

    <style name="profile_all_container_body">
        <item name="android:id">@id/profile_body_container</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/profile_header_container</item>
        <item name="android:layout_marginTop">-24dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_big_16dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_medium_8dp</item>
        <item name="android:background">@drawable/circle_profile_body</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_big_super_24dp</item>
    </style>

</resources>
