<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/cardview_list_all_clicked">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dimen_medium_8dp"
        android:layout_marginBottom="@dimen/dimen_medium_8dp">

        <LinearLayout
            android:layout_width="@dimen/dimen_weight"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:text="@string/title_judulpa"
                style="@style/content_all_list_title"/>

            <TextView
                android:id="@+id/ctn_mhs_judul_pa_dosen_textview_judul"
                style="@style/content_all_list_sub_title"/>

            <View
                style="@style/view_all_line_horizontal"/>

            <TextView
                android:text="@string/text_kategori"
                style="@style/content_all_list_title"/>

            <TextView
                android:id="@+id/ctn_mhs_judul_pa_dosen_textview_kategori"
                style="@style/content_all_list_sub_title"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorBackground"/>

        <ImageView
            android:id="@+id/ctn_mhs_judul_pa_dosen_status"
            android:layout_width="@dimen/dimen_circle_background"
            android:layout_height="@dimen/dimen_circle_background"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginEnd="@dimen/dimen_big_16dp"
            android:layout_marginStart="@dimen/dimen_big_16dp"
            android:textColor="@color/colorTextWhite"
            android:src="@drawable/ic_judul_available"
            android:background="@drawable/circle_judul_available"
            android:textSize="@dimen/text_size_title_medium_20sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
